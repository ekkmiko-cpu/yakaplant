{
    "version": 2,
    "cleanUrls": true,
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=604800, stale-while-revalidate=86400"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/api",
            "destination": "/api/index.js"
        },
        {
            "source": "/api/:path*",
            "destination": "/api/index.js"
        }
    ],
    "functions": {
        "api/index.js": {
            "includeFiles": "node_modules/sql.js/dist/sql-wasm.wasm"
        },
        "api/[...path].js": {
            "includeFiles": "node_modules/sql.js/dist/sql-wasm.wasm"
        }
    }
}
